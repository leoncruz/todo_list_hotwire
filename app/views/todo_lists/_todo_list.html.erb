<div id="<%= dom_id todo_list %>">
  <p>
    <strong>Name:</strong>
    <%= todo_list.name %>
  </p>

  <div>
    <% todo_list.todo_items.each do |todo_item| %>
      <p>
        Name: <%= todo_item.name %>
      </p>
      <p>
        Completed: <%= todo_item.completed %>
      </p>

      <%= link_to 'Remove item',
        todo_list_todo_item_path(todo_list, todo_item), data: {
          'turbo-method': :delete,
          'turbo-confirm': t('.delete_todo_item_confirm')
        }
      %>
    <% end %>
  </div>

</div>

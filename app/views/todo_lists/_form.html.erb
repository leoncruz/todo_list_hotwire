<%= form_with(model: todo_list) do |form| %>
  <% if todo_list.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo_list.errors.count, "error") %> prohibited this todo_list from being saved:</h2>

      <ul>
        <% todo_list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div id="todo-list-form">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div id="todo-item-form">
    <h1>Items</h1>
    <%= form.fields_for :todo_items, todo_list.todo_items.build do |ff| %>
      <div>
        <%= ff.label :name %>
        <%= ff.text_field :name %>
      </div>

      <div>
        <%= ff.label :completed %>
        <%= ff.check_box :completed %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
